<Page x:Class="database2.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:database2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegPage">

    <Grid>
        <StackPanel>
            <Label>Регистрация</Label>
            <GroupBox Header="Введите фамилию">
                <TextBox Name="TbSurnameReg"/>
            </GroupBox>
            <GroupBox Header="Введите имя">
                <TextBox Name="TbNameReg"/>
            </GroupBox>
            <GroupBox Header="Выберите пол">
                <ComboBox Name="CbGenderReg"></ComboBox>
            </GroupBox>
            <GroupBox Header="Введите логин">
                <TextBox Name="TbLoginReg"/>
            </GroupBox>
            <GroupBox Header="Введите пароль">
                <PasswordBox Name="TbPasReg"/>
            </GroupBox>
            <Button Click="Button_Click">Зарегистрироваться</Button>
        </StackPanel>
    </Grid>
</Page>

