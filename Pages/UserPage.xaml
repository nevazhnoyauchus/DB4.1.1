<Page x:Class="database2.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:database2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage">

    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel Width="316">
                <Image Name="UserPhotoImage" Height="262" VerticalAlignment="Top" Margin="39,10,20,10" Source="NoPhoto.jpg"/>
                <Button Click="Button_Click_3" Margin="83,0" Content="Изменить фото" Height="22"/>
            </StackPanel>
            <StackPanel Margin="10">
                <GroupBox Header="Имя" Width="182">
                    <TextBlock Name="TBUserName"></TextBlock>
                </GroupBox>
                <GroupBox Header="Фамилия">
                    <TextBlock Name="TBUserSurname"></TextBlock>
                </GroupBox>
                <Button Margin="0,10,0,0" Click="Button_Click_1">Редактировать профиль</Button>
                <Button Margin="0,10,0,0" Click="Button_Click_2">Изменить логин и пароль</Button>
                <Button Margin="0,10,0,0" Click="Button_Click">На главную</Button>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
