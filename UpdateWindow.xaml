<Window x:Class="database2.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:database2"
        mc:Ignorable="d"
        Title="UpdateWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="91*"/>
            <ColumnDefinition Width="701*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="2">
            <GroupBox Height="50" Width="200" Margin="10" Header="Введите имя"> 
                <TextBox Name="TBUpName"></TextBox>
            </GroupBox>
            <GroupBox Height="50" Width="200" Margin="10" Header="Введите фамилию">
                      <TextBox Name="TBUpSurname"></TextBox>
            </GroupBox>

  
      
            <Button Click="Button_Click" Content="Обновить данные" Margin="321,0"/>
        </StackPanel>
    </Grid>
</Window>
